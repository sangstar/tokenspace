# Makefile for python interface for package tui.
# File is generated by gopy. Do not edit.
# gopy build -output=./tui ./gosrc/tui

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/Users/sangersteel/GolandProjects/wordspace/wordspace_venv/bin/python
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = "-I/Users/sangersteel/.pyenv/versions/3.9.7/include/python3.9"
LDFLAGS = "-L/Users/sangersteel/.pyenv/versions/3.9.7/lib" "-lpython3.9" -ldl -L/Users/sangersteel/.pyenv/versions/3.9.7/lib -Wl,-rpath,/Users/sangersteel/.pyenv/versions/3.9.7/lib -L/opt/homebrew/lib -Wl,-rpath,/opt/homebrew/lib  -framework CoreFoundation 

all: gen build

gen:
	gopy gen -no-make ./gosrc/tui

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm tui.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w tui.go
	# generate tui_go$(LIBEXT) from tui.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o tui_go$(LIBEXT) tui.go
	# use pybindgen to build the tui.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _tui$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated tui.py python wrapper imports this c-code package
	
	$(GCC) tui.c -dynamiclib tui_go$(LIBEXT) -o _tui$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


